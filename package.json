{
  "name": "db8-events",
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "private": true,
  "scripts": {
    "start": "npm-run-all client:build server:prod",
    "dev": "run-p client:dev server:dev",
    "client:dev": "cd client && yarn start",
    "client:build": "cd client && yarn build",
    "server:prod": "cd server && yarn start",
    "server:dev": "cd server && yarn watch:dev"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
